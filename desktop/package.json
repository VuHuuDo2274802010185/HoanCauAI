{
  "name": "hoancau-ai-desktop",
  "version": "1.0.0",
  "description": "HoanCau AI Resume Processor - Desktop Application",
  "main": "src/electron-main.js",
  "author": "HoanCau AI Team",
  "license": "MIT",
  "homepage": ".",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "electron . --dev",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac", 
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder --win --mac --linux",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "path": "^0.12.7"
  },
  "build": {
    "appId": "com.hoancau.ai.resume.processor",
    "productName": "HoanCau AI Resume Processor",
    "directories": {
      "output": "dist/"
    },
    "files": [
      "src/electron-main.js",
      "src/electron-preload.js", 
      "src/electron-renderer.js",
      "src/desktop.html",
      "assets/**/*",
      "../widget/**/*",
      "../modules/**/*",
      "../main_engine/**/*",
      "../requirements.txt",
      "../*.py",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "python-dist/",
        "to": "python/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
