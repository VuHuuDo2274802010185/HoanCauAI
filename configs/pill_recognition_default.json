{
  "model": {
    "vision_model_name": "vit-base-patch16-224",
    "vision_embed_dim": 768,
    "vision_num_heads": 12,
    "vision_num_layers": 12,
    "text_model_name": "bert-base-uncased",
    "text_embed_dim": 768,
    "text_max_length": 128,
    "fusion_embed_dim": 512,
    "fusion_num_heads": 8,
    "fusion_num_layers": 4,
    "num_classes": 1000,
    "dropout_rate": 0.1,
    "image_size": 224,
    "image_mean": [0.485, 0.456, 0.406],
    "image_std": [0.229, 0.224, 0.225]
  },
  "training": {
    "batch_size": 32,
    "learning_rate": 1e-4,
    "num_epochs": 100,
    "warmup_steps": 1000,
    "weight_decay": 0.01,
    "use_ddp": true,
    "world_size": 1,
    "rank": 0,
    "dist_backend": "nccl",
    "dist_url": "env://",
    "num_workers": 4,
    "pin_memory": true,
    "optimizer": "adamw",
    "scheduler": "cosine",
    "clip_grad_norm": 1.0,
    "save_every": 5,
    "eval_every": 1,
    "save_best_only": true,
    "use_amp": true,
    "use_augmentation": true,
    "augmentation_strength": 0.5
  },
  "data": {
    "data_root": "data/pills",
    "train_split": "train",
    "val_split": "val",
    "test_split": "test",
    "train_ratio": 0.7,
    "val_ratio": 0.15,
    "test_ratio": 0.15,
    "use_tesseract": true,
    "use_paddle_ocr": true,
    "ocr_languages": ["en", "ch_sim"],
    "min_image_size": 64,
    "max_image_size": 512
  },
  "ocr": {
    "tesseract_cmd": null,
    "tesseract_config": "--oem 3 --psm 6",
    "paddle_use_angle_cls": true,
    "paddle_lang": "en",
    "paddle_use_gpu": true,
    "paddle_show_log": false,
    "min_text_length": 1,
    "max_text_length": 128,
    "clean_text": true,
    "min_confidence": 0.5,
    "paddle_confidence_threshold": 0.5
  }
}